                    android:id="@+id/ups9145Complain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/ups9145View"
                    android:layout_toStartOf="@+id/ups9145View"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:onClick="cardButtonClickListener"
                    android:text="complain" />

                <Button
                    android:id="@+id/ups9145View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:onClick="cardButtonClickListener"
                    android:text="view" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/ups9145Complain"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/ups9145Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ups9145Image"
                    android:layout_toRightOf="@+id/ups9145Image"
                    android:text="Eaton 9145"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ups9145Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ups9145Title"
                    android:layout_toEndOf="@+id/ups9145Image"
                    android:layout_toRightOf="@+id/ups9145Image"
                    android:maxLines="5"
